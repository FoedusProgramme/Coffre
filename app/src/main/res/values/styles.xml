<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.MaterialToolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="itemIconTint">@color/color_on_surface</item>
        <item name="iconTint">@color/color_on_surface</item>
        <item name="android:minHeight">?actionBarSize</item>
    </style>

    <style name="App.CollapsingToolbar.Large" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="titleCollapseMode">fade</item>
        <item name="contentScrim">?attr/colorSurfaceContainer</item>
    </style>

    <style name="App.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/color_stroke</item>
        <item name="android:alpha">.2</item>
    </style>

    <style name="App.MaterialCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
    </style>
</resources>